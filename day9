// mirror the code name
#include <stdio.h>
#include <string.h>

void mirror(char str[], int index)
{
    // Base case
    if (index < 0)
        return;

    // Print current character
    printf("%c", str[index]);

    // Recursive call
    mirror(str, index - 1);
}

int main()
{
    char str[1000];

    // Input
    scanf("%s", str);

    int length = strlen(str);

    // Output (mirror format)
    mirror(str, length - 1);

    return 0;
}
